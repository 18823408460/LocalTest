<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/first_module_drawable_circle_05e"
        android:drawableLeft="@drawable/tree"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="温室栽培"
        android:textColor="#00cafd"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/first_module_drawable_circle_05e"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/wendu"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="温度：0.2"
            android:textColor="#00cafd"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shidu"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="湿度：0.2"
            android:textColor="#00cafd"
            android:textSize="20dp" />

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="干燥的快冒烟了,快按触动传感器两下给我补水吧"
            android:textColor="#00cafd"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>