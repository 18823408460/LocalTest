            android:layout_height="wrap_content"
            android:src="@drawable/first_module_drawable_circle_blue" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/first_module_drawable_circle_green" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/first_module_drawable_circle_zi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/first_module_drawable_circle_qing" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
