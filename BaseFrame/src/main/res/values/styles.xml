<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="bottom_button_tag">bottom_botton_tag
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/tv_bottom_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_tv_recycleview">style_tv_recycleview
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="fragmentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否启用标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 是否使用背景半透明 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 温湿度 Textview
         android:layout_width="match_parent" 不能写在这里？
        -->
    <style name="tv_wenshidu">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#5dbeec</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="tv_smartdoctor">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="layout_tempture">tempture
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="tv_yellow">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFF00</item>
    </style>

    <style name="tv_green">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="tv_tt_title">
        <item name="android:textSize">34dp</item>
        <item name="android:textColor">#FFFF00</item>
    </style>

    <style name="tv_tt_content">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>