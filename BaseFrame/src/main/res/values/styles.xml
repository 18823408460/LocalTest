<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen"/>
    <style name="AppBaseTheme1" parent="Theme.AppCompat.Light"/>

    <style name="AppCompatFullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="bottom_button_tag">bottom_botton_tag
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/tv_bottom_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_tv_recycleview">style_tv_recycleview
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="fragmentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否启用标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 是否使用背景半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 温湿度 Textview
        -->
    <style name="tv_wenshidu">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#5dbeec</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="tv_smartdoctor">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="layout_tempture">tempture
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="tv_yellow">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFC528</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="tv_green">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/view_color_green</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="view_head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="recycleview">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>


    <style name="tv_tt_title">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#FFC730</item>
    </style>

    <style name="tv_tt_content">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#B6B6B6</item>
    </style>

    <style name="tv_head_two">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#45C4FF</item>
    </style>

    <style name="view_smarthome">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/red</item>
    </style>


    <!-- style中使用自定义属性，不需要app 命名空间，否则会报错-->
    <style name="custom">
        <item name="resId1">@drawable/activity_smartdoctor_lizi</item>
    </style>
</resources>