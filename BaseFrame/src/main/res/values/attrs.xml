<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="temptureShowLayout">
        <attr name="image_tem" format="reference" />
        <attr name="tem_range" format="string" />
        <attr name="tem_range_tip" format="string" />
    </declare-styleable>

    <declare-styleable name="headLayout">
        <attr name="btn_left_bk" format="reference" />
        <attr name="btn_right_bk" format="reference" />
        <attr name="tv_center_content" format="string" />
        <attr name="tv_color" format="color" />
        <attr name="tv_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CornerFlagView">
        <!--文本大小-->
        <attr name="cfv_textSize" format="dimension"/>
        <!--文本内容-->
        <attr name="cfv_textContent" format="string"/>
        <!--文本颜色-->
        <attr name="cfv_textColor" format="color"/>
        <!--背景颜色-->
        <attr name="cfv_backgroundColor" format="color"/>
        <!--是否占满上角-->
        <attr name="cfv_fullCorner" format="boolean"/>
        <!--倾斜放向-->
        <attr name="cfv_orientation" format="enum">
            <!--右角标，向左侧倾斜-->
            <enum name="right" value="0"/>
            <!--左角标，向右侧倾斜-->
            <enum name="left" value="1"/>
        </attr>

    </declare-styleable>


    <declare-styleable name="SurfaceViewAnim">
        <attr name="type">
            <enum name="dry" value="0" />
            <enum name="dryWet" value="1" />
            <enum name="highDry" value="2" />
            <enum name="highDryWet" value="3" />
            <enum name="moist" value="4" />
            <enum name="moistWet" value="5" />
            <enum name="lowShao" value="6" />
            <enum name="lowWen" value="7" />
            <enum name="highShao" value="8" />
            <enum name="openDoor" value="9" />
            <enum name="openLamp" value="10" />
            <enum name="openAidCondition" value="11" />
            <enum name="openTv" value="12" />
        </attr>
        <attr name="orderOnTop" format="boolean" />
    </declare-styleable>


    <declare-styleable name="ImageTextView">
        <attr name="bitmapResId" format="reference" />
        <attr name="textUpLeft" format="string" />
        <attr name="textUpRight" format="string" />
        <attr name="textDown" format="string" />
        <attr name="textNormalColor" format="color" />
        <attr name="textDynamicColor" format="color" />
        <attr name="lineColor" format="color" />
        <attr name="lineSize" format="dimension" />
        <attr name="textNormalSize" format="dimension" />
        <attr name="textDynamicSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="rotate_three_view">
        <attr name="resId1" format="reference" />
        <attr name="resId2" format="reference" />
        <attr name="resId3" format="reference" />
    </declare-styleable>


    <declare-styleable name="Carousel">
        <attr name="android:gravity" />
        <attr name="android:animationDuration" />
        <attr name="UseReflection" format="boolean" />
        <attr name="Items" format="integer" />
        <attr name="SelectedItem" format="integer" />
        <attr name="maxTheta" format="float" />
        <attr name="minQuantity" format="integer" />
        <attr name="maxQuantity" format="integer" />
        <attr name="Names" format="string" />
    </declare-styleable>
</resources>
