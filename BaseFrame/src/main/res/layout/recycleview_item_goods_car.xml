<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x320"
    android:layout_margin="@dimen/x10"
    android:background="@color/green_low"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox_goods_car_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/x2"
        android:background="@drawable/checkbox_selector"
        android:button="@null" />

    <ImageView
        android:id="@+id/imagevie_goods_car_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/x10"
        android:background="@drawable/tree" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/x5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_desc_goods_car_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="描述描述描述描述描述描述描述描述描述描述描述描述"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price_goods_car_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="价格" />

            <com.uurobot.baseframe.view.GoodsNumSelectView
                android:id="@+id/googsNumSelectView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>