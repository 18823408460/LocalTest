<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.uurobot.baseframe.view.AnimImageView
        android:background="@drawable/low0"
        android:id="@+id/surfaceview_smartdoctor_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:orderOnTop="true"
        app:type="lowShao" />

    <include
        android:layout_centerInParent="true"
        layout="@layout/layout_smartdoctor_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="110dp" />


    <com.uurobot.baseframe.view.TemptureShowLayout
        android:id="@+id/high_shao"
        style="@style/layout_tempture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_above="@id/low_shao"
        app:image_tem="@drawable/high_shao"
        app:tem_range="@string/high_shao_range"
        app:tem_range_tip="@string/high_shao_tip" />


    <com.uurobot.baseframe.view.TemptureShowLayout
        android:id="@+id/low_shao"
        style="@style/layout_tempture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:image_tem="@drawable/low_shao"
        app:tem_range="@string/low_shao_range"
        app:tem_range_tip="@string/low_shao_tip" />

    <com.uurobot.baseframe.view.TemptureShowLayout
        style="@style/layout_tempture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/low_shao"
        android:layout_marginEnd="62dp"
        app:image_tem="@drawable/low_wen"
        app:tem_range="@string/low_wen_range"
        app:tem_range_tip="@string/low_wen_tip" />


</RelativeLayout>