<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_smartdoctor_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/activity_smartdoctor_two_center" />

    <TextView
        android:text="@string/tv_smartdoctor_two_tip"
        style="@style/tv_smartdoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/img_smartdoctor_two"
        android:layout_toRightOf="@id/img_smartdoctor_two" />
</RelativeLayout>